{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
    }
  },
  "exclude": ["src/**/tests", "node_modules", "dist"]
}
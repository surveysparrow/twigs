{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "allowJs": true
      }
    }
  },
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "jsc": {
          "transform": {
            "react": {
              "runtime": "automatic"
            }
          }
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^@src/(.*)": "<rootDir>/src/$1",
    "^lodash-es$": "lodash"
  },
  "setupFiles": ["./setup-tests.ts"]
}

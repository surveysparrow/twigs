{
  "name": "@sparrowengg/twigs-root",
  "private": true,
  "npmClient": "yarn",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run eslint",
    "build:icons": "lerna run build --scope=@sparrowengg/twigs-react-icons",
    "build:components": "lerna run build --scope=@sparrowengg/twigs-react",
    "build:editor": "lerna run build --scope=@sparrowengg/twigs-editor-react",
    "build:modules": "lerna run build --ignore=@sparrowengg/twigs-docs",
    "build:docs": "lerna run build --scope=@sparrowengg/twigs-docs --verbose"
  },
  "devDependencies": {
    "lerna": "^7.0.0"
  }
}